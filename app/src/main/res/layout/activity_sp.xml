<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".demo.SPActivity">

    <TextView
        style="@style/MuTvBold"
        android:text="用户信息都存入avatar的xml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sp_put_avatar_name"
            style="@style/MuBtnBlueCornersThree"
            android:text="写名字" />

        <TextView
            android:id="@+id/sp_get_avatar_name"
            style="@style/MuBtnBlueCornersThree"
            android:text="获取名字" />

        <TextView
            android:id="@+id/sp_remove_avatar_name"
            style="@style/MuBtnBlueCornersThree"
            android:text="清空名字" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sp_put_avatar_age"
            style="@style/MuBtnBlueCornersThree"
            android:text="写年龄" />

        <TextView
            android:id="@+id/sp_get_avatar_age"
            style="@style/MuBtnBlueCornersThree"
            android:text="获取年龄" />

        <TextView
            android:id="@+id/sp_remove_avatar_age"
            style="@style/MuBtnBlueCornersThree"
            android:text="清空年龄" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sp_remove_avatar"
            style="@style/MuBtnBlueCornersThree"
            android:text="清空avatar整个" />
    </LinearLayout>


    <TextView
        style="@style/MuTvBold"
        android:text="时间都存入time的xml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sp_put_event_time"
            style="@style/MuBtnBlueCornersThree"
            android:text="写事件时间" />

        <TextView
            android:id="@+id/sp_get_event_time"
            style="@style/MuBtnBlueCornersThree"
            android:text="获取事件时间" />

        <TextView
            android:id="@+id/sp_remove_event_time"
            style="@style/MuBtnBlueCornersThree"
            android:text="清空事件时间" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sp_remove_time"
            style="@style/MuBtnBlueCornersThree"
            android:text="清空time整个" />
    </LinearLayout>
</LinearLayout>